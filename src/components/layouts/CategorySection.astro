---
import ImageGallery from "../ui/Cuadrilla";

interface Props {
    title: string;
    description: string;
    tipo: string;
}

const { title, description, tipo } = Astro.props;
---

<section id={`${tipo}`}
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5  gap-2 mt-6 mb-4 w-full mx-auto"
>
    <div class="relative w-full col-span-2  flex flex-col items-center justify-center mx-auto">
        <div
            class="md:sticky" transition:name={tipo}
        >
            <h2
                class="text-4xl flex items-center justify-center mx-auto text-center"
            >
                <span
                    class="text-yellow-400 text-center xl:text-left mx-2"
                    >-</span
                >{title}
            </h2>
            <p
                class="w-72 text-pretty my-4 text-lg font-light text-gray-500 flex mx-auto"
            >
                {description}
            </p>
        </div>
    </div>

    <article
        class="p-4 w-full md:w-4/5 xl:w-3/4 md:ml-24 col-span-3 mx-auto md:col-span-3"
    >
        <ImageGallery tipo={tipo} client:load />
    </article>
</section>
